<div class="container mt-5">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-3">
        <div class="list-card card" style="height: 250px;">
          <div class="card-body d-flex justify-content-center align-items-center">
            <p class="mb-0">
              <%= link_to list.name, list_path(list), class: "text-white fw-bold text-decoration-none fs-1" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<footer class="mt-5 text-center">
  <p class="text-white">
    <%= link_to 'Create new List', new_list_path, class: "btn btn-magic text-decoration-none text-white ms-5 fw-bold"%>
  </p>
</footer>
