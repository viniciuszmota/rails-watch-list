<h1 class="text-center mt-5 fw-bold">Create a New List</h1>


<%= simple_form_for(@list) do |f| %>
  <div class="container">
    <div class="form-group">
      <%= f.input :name, placeholder: 'Drama' %>
    </div>
    <div class="form-group text-center">
      <%= f.button :submit, class: 'btn btn-magic text-decoration-none text-white ms-5 fw-bold'%>
    </div>
  </div>
<% end %>
